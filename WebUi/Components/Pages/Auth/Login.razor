@page "/login"


@using Common
@using Common.RequestsDto
@using Common.ResponsesDto
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using System.Net.Http.Json
@using Blazored.SessionStorage

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject ISessionStorageService SessionStorage // برای ذخیره JWT


<div class="login-container">
    <h2>ورود به حساب کاربری</h2>

    <EditForm Model="@loginRequest" OnValidSubmit="HandleLogin">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="email">ایمیل:</label>
            <InputText id="email" @bind-Value="loginRequest.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="password">رمز عبور:</label>
            <InputText id="password" type="password" @bind-Value="loginRequest.Password" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <button type="submit" class="btn btn-primary">ورود</button>
    </EditForm>
</div>


@code {
    private LoginRequest loginRequest = new LoginRequest();
    private string errorMessage = string.Empty;

    [Inject]
    public IHttpClientFactory HttpClientFactory { get; set; } // IHttpClientFactory را تزریق کنید
    // HttpClient را از طریق Name factory که در Program.cs تعریف کردید تزریق کنید
    // اگر CustomServerAuthenticationStateProvider در همان پروژه WebUi است
    // باید آن را نیز @inject کنید یا مطمئن شوید که به HttpClient دسترسی دارد.
    // @inject AuthenticationStateProvider AuthenticationStateProvider (این قبلاً در بالا هست و درست است)


    private async Task HandleLogin()
    {
        errorMessage = string.Empty; // هر بار خطا را پاک کنید

        try
        {
            // از HttpClientFactory برای ایجاد یک HttpClient نام‌گذاری شده استفاده کنید
            // "WebApiClient" نامی است که در Program.cs تعریف خواهیم کرد.
            var httpClient = HttpClientFactory.CreateClient("WebApi");

            var response = await httpClient.PostAsJsonAsync("api/Auth/login", loginRequest);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<AuthenticationResult>();
                if (result != null && !string.IsNullOrEmpty(result.Token))
                {
                    await SessionStorage.SetItemAsync("authToken", result.Token);
                    // به CustomServerAuthenticationStateProvider اطلاع دهید که وضعیت احراز هویت تغییر کرده است
                    await ((CustomServerAuthenticationStateProvider)AuthenticationStateProvider).MarkUserAsAuthenticated(result.Token);
                    NavigationManager.NavigateTo("/"); // به صفحه اصلی هدایت شود
                }
                else
                {
                    errorMessage = "پاسخ API معتبر نبود.";
                }
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"خطا در ورود: {response.ReasonPhrase} - {errorContent}";
                // می‌توانید جزئیات خطای بیشتر را از errorContent استخراج کنید
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"خطای ارتباط با سرور: {httpEx.Message}. مطمئن شوید WebAPI در حال اجرا است.";
        }
        catch (Exception ex)
        {
            errorMessage = $"خطای غیرمنتظره: {ex.Message}";
        }
    }
}
