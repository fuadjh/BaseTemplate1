@page "/login"
@rendermode InteractiveServer

@using Common
@using Common.RequestsDto
@using Common.ResponsesDto
@using Common.Wrapper
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using System.Net.Http.Json
@using Blazored.SessionStorage

@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject ISessionStorageService SessionStorage // برای ذخیره JWT


<div class="login-container">
    <h2>ورود به حساب کاربری</h2>

    <EditForm Model="@loginRequest" OnValidSubmit="HandleLogin" FormName="LoginForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="form-group">
            <label for="email">ایمیل:</label>
            <InputText id="email" @bind-Value="loginRequest.Email" class="form-control" />
        </div>

        <div class="form-group">
            <label for="password">رمز عبور:</label>
            <InputText id="password" type="password" @bind-Value="loginRequest.Password" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
            </div>
        }

        <button type="submit" class="btn btn-primary">ورود</button>
    </EditForm>
</div>


@code {
    private LoginRequest loginRequest = new LoginRequest();
    private string errorMessage = string.Empty;

    [Inject]
    public IHttpClientFactory HttpClientFactory { get; set; } // IHttpClientFactory را تزریق کنید
    // HttpClient را از طریق Name factory که در Program.cs تعریف کردید تزریق کنید
    // اگر CustomServerAuthenticationStateProvider در همان پروژه WebUi است
    // باید آن را نیز @inject کنید یا مطمئن شوید که به HttpClient دسترسی دارد.
    // @inject AuthenticationStateProvider AuthenticationStateProvider (این قبلاً در بالا هست و درست است)

    private async Task HandleLogin()
    {
        errorMessage = string.Empty;

        try
        {
            var httpClient = HttpClientFactory.CreateClient("WebApi");
            var response = await httpClient.PostAsJsonAsync("api/Auth/login", loginRequest);

            if (response.IsSuccessStatusCode)
            {
                var wrapper = await response.Content.ReadFromJsonAsync<ResponseWrapper<AuthenticationResult>>();

                if (wrapper?.IsSuccess == true && wrapper.Data?.Token != null)
                {
                    await SessionStorage.SetItemAsync("authToken", wrapper.Data.Token);
                    await ((CustomServerAuthenticationStateProvider)AuthenticationStateProvider)
                        .MarkUserAsAuthenticated(wrapper.Data.Token);
                    NavigationManager.NavigateTo("/");
                    return;
                }

                // اگر IsSuccess = false بود (مثل رمز اشتباه)
                errorMessage = wrapper?.Messages?.FirstOrDefault() ?? "خطا در ورود: پاسخ نامعتبر از سرور.";
            }
            else
            {
                // اینجا خطاهای 400, 500 و غیره رو هندل می‌کنیم
                var errorContent = await response.Content.ReadAsStringAsync();

                // سعی کن اگر JSON بود، جزئیات رو بخونی
                try
                {
                    var errorWrapper = await response.Content.ReadFromJsonAsync<ResponseWrapper<object>>();
                    if (errorWrapper?.Messages?.Any() == true)
                    {
                        errorMessage = string.Join(" ", errorWrapper.Messages);
                    }
                    else
                    {
                        errorMessage = $"خطای سرور ({(int)response.StatusCode}): {errorContent}";
                    }
                }
                catch
                {
                    // اگر JSON نبود (مثل exception خام سرور)
                    errorMessage = $"خطای سرور ({(int)response.StatusCode}): {errorContent.Trim()}";
                }
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"خطای ارتباط با سرور: {httpEx.Message}. مطمئن شوید WebAPI در حال اجرا است.";
        }
        catch (Exception ex)
        {
            errorMessage = $"خطای غیرمنتظره: {ex.Message}";
        }
    }
}
